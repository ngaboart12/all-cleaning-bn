{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./", // Change this to include everything
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",    // Include all files in src
    "prisma/**/*"  // Include all files in prisma
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
